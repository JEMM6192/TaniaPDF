---
// src/layouts/Layout.astro
import Navbar from "../components/Navbar.astro";
import Sidebar from "../components/Sidebar.astro";
import ControlPanel from "../components/ControlPanel.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="es" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <title>Tania PDF Editor</title>
    <!-- Librerías externas -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.7.107/pdf.min.js"
      defer></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"
      defer></script>
  </head>
  <!-- Usa h-screen para que el body tenga una altura fija -->
  <body class="h-screen overflow-x-hidden">
    <!-- Navbar en la parte superior -->
    <Navbar />

    <!-- Contenedor principal: Sidebar izquierdo, área central y sidebar derecho -->
    <div class="flex h-full w-full gap-x-4">
      <!-- Sidebar izquierdo: ancho fijo -->
      <div class="w-48 flex-shrink-0">
        <Sidebar />
      </div>

      <!-- Área central: visor PDF con scroll vertical independiente -->
      <main class="flex-1">
        <slot />
      </main>

      <!-- Sidebar derecho: panel de control, ancho fijo -->
      <div class="w-64 flex-shrink-0">
        <ControlPanel />
      </div>
    </div>

    <!-- Script de FlyonUI -->
    <script src="/node_modules/flyonui/flyonui.js" is:inline></script>
  </body>
</html>
