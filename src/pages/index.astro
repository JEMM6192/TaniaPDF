---
import "../assets/styles.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Visor PDF con Marcas</title>
    <!-- PDF.js -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.7.107/pdf.min.js"
      defer></script>
    <!-- jsPDF -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"
      defer></script>
  </head>
  <body>
    <div id="mainContainer">
      <div id="viewerContainer">
        <div id="pdfContainer">
          <canvas id="pdfCanvas"></canvas>
          <canvas id="overlayCanvas"></canvas>
        </div>
      </div>
      <div id="controlPanel">
        <button id="btnAbrir">Abrir PDF</button>
        <button id="btnZoomIn">Acercar</button>
        <button id="btnZoomOut">Alejar</button>
        <button id="btnAgregarMarca">Agregar Marca</button>
        <button id="btnImprimir">Imprimir</button>
        <button id="btnGuardar">Guardar</button>
        <div id="marksListContainer">
          <div id="marksList"></div>
        </div>
      </div>
    </div>
    <script type="module" src="/js/viewer.js"></script>
  </body>
</html>
